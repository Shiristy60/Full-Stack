<%- include("partials/header") %>
<div class="container mt-5 border border-dark rounded p-4" id="editForm">
	<div>
		<h2>Edit <%= user.FirstName%></h2>
		<hr>
	</div>
	<div>
		<form class="form p-3" action ="/users/<%= user._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="user[FirstName]">First Name: </label>
					<input class="form-control" type="text" name="user[FirstName]" value="<%=user.FirstName%>">
			</div>
			<div class="form-group">
				<label for="user[LastName]">Last Name: </label>
				<input class="form-control" type="text" name="user[LastName]" value="<%=user.LastName%>">
			</div>
			<div class="form-group">
				<label for="user[Comment]">Reviews: </label>
				<textarea class="form-control" name="user[Comment]"><%=user.Comment%></textarea>
			</div>
			<div>
				<input class="btn  btn-sm btn-outline-primary" type="submit">
			</div>
		</form>
	</div>
	
</div>

<%- include("partials/footer") %>