<%- include("partials/header") %>
<div class="container mt-5">
	<div class="row">
		<% users.forEach(function(user){%>
		<div class="card col-12 col-md-5 mr-5 mb-5">
			<div class="card-body">
				<div class="card-title">
					<strong>First name:</strong>
					<%= user.FirstName %>
				</div>
				<div>
					<label><strong>Last name: </strong></label>
						<%= user.LastName %>
				</div>
				<div>
					<label><strong>Comments: </strong></label>
						<%= user.Comment %>
				</div>
				<div>
					<a class="btn btn-sm btn-outline-primary mt-2" href="/users/<%=user._id%>">Read More</a>
				</div>
			</div>	
		</div>

	<% }) %>
		
	</div>
</div>
		
<%- include("partials/footer") %>