<%- include("partials/header") %>
<div class="container mt-5 border border-dark rounded p-4" id="newForm">
	<div>
		<h2>NEW USER</h2>
		<hr>
	</div>
	<div>
		<form class="form" action ="/users" method="POST">
			<div class="form-group">
				<label for="FirstName">First Name: </label>
				<input  class="form-control" type="text" name="FirstName" placeholder="First name">
			</div>
			<div class="form-group">
				<label  for="LastName">Last Name: </label>
				<input class="form-control" type="text" name="LastName" placeholder="Last name">
			</div>
			<div class="form-group">
				<label for="Comment">Reviews: </label>
				<textarea class="form-control" rows="10" name="Comment" placeholder="Your reviews"></textarea>
			</div>
			<div class="form-group">
				<input class="form-group btn btn-sm btn-info" type="submit">
			</div>
		</form>
	</div>	
</div>

<%- include("partials/footer") %>